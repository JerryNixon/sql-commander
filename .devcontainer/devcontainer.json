{
  "name": "sql-cmdr",
  "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "dotnet restore",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "containerEnv": {
    "ASPNETCORE_URLS": "http://localhost:8080",
    "ConnectionStrings__db": "Server=host.docker.internal;Database=master;User Id=sa;Password=Your_password123;TrustServerCertificate=true"
  },
  "forwardPorts": [8080],
  "remoteUser": "vscode"
}
